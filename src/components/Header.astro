---
import HeaderLink from "./HeaderLink.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
---

<header>
  <nav class="flex gap-4 my-16">
    <img
      class="max-w-28 max-h-28 min-w-28"
      src="/2024-02-19-211052_394x379_scrot.png"
      alt="funny pelican"
    />

    <div class="flex flex-col justify-between">
      <div>
        <h2 class="text-2xl font-medium"><a href="/">{SITE_TITLE}</a></h2>
        <h3 class="text-gray-600"><a href="/">{SITE_DESCRIPTION}</a></h3>
      </div>

      <div class="internal-links flex gap-1.5">
        <HeaderLink href="/">home</HeaderLink>
        <HeaderLink href="/blog">code</HeaderLink>
        <HeaderLink href="/about">about</HeaderLink>
      </div>
    </div>
  </nav>
</header>
